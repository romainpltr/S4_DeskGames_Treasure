<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, user-scalable=no">
        {% if app.user.id != partie.tour.id %}
            {% if app.user.id == partie.j1_id %}
                {% if partie.actions_j2.cadeau.etat ==1 or  partie.actions_j2.concurrence.etat ==1%}
                {% else %}
                    <meta http-equiv="refresh" content="7">
                {% endif %}
            {% endif %}
            {% if app.user.id == partie.j2_id %}
                {% if partie.actions_j1.cadeau.etat ==1 or  partie.actions_j1.concurrence.etat ==1%}
                {% else %}
                    <meta http-equiv="refresh" content="7">
                {% endif %}
            {% endif %}
        {% endif %}

        {% if app.user.id ==partie.tour.id %}

            {% if app.user.id == partie.j1_id %}
                {% if partie.actions_j1.cadeau.etat == 1%}
                    <meta http-equiv="refresh" content="7">
                {% endif %}
                {% if partie.actions_j1.concurrence.etat == 1%}
                    <meta http-equiv="refresh" content="7">
                {% endif %}
            {% endif %}

            {% if app.user.id == partie.j2_id %}
                {% if partie.actions_j2.cadeau.etat == 1%}
                    <meta http-equiv="refresh" content="7">
                {% endif %}
                {% if partie.actions_j2.concurrence.etat == 1%}
                    <meta http-equiv="refresh" content="7">
                {% endif %}
            {% endif %}

        {% endif %}
        <title>{% block title %}Game - Treasure{% endblock %}</title>
        
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-grid.css') }}"/>
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap-reboot.css') }}"/>
	<link rel="stylesheet" type="text/css" href="{{ asset('assets/css/plateau.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block menu %}                    
        {% endblock %}
        {% block body %}{% endblock %}
        <script type='text/javascript' src="{{ asset('assets/js/jquery-3.6.0.min.js')}}"></script>
        <script type='text/javascript' src="{{ asset('assets/js/bootstrap.js') }}"></script>
        <script type='text/javascript' src="{{ asset('assets/js/bootstrap.bundle.js') }}"></script>
        <script src="{{ asset('assets/js/plateau.js') }}"></script>
        <script type='text/javascript' src="{{ asset('assets/js/socket.io.js') }}"></script>
        {% block javascripts %}{% endblock %}


    </body>
</html>
